@model IEnumerable<projectk.Models.Article>

@{
    ViewBag.Title = "Index";
}

<div class="articles">
@foreach (var item in Model) {
    <div class="aitem">
        <div class="item-info-left">

            <div class="aitem-top">
                <div class="aitem-title"> @Html.DisplayFor(modelItem => item.Name)</div>
                <div class="aitem-title">
                    <span>Post by</span>&nbsp;<a href="#"><span style="font-weight: bold;">Super
                            rain</span></a>
                </div>
                <div>
                    <span>View: 6422</span>&nbsp;<span>Like: 6422</span>
                </div>
            </div>
        </div>
        <div class="item-right">
            <div class="aitem-top">
                <div class="aitem-title"> @Html.DisplayFor(modelItem => item.Name)</div>
                <div class="aitem-title">
                    <span>Post by</span>&nbsp;<a href="#"><span style="font-weight: bold;">Super
                            rain</span></a>
                </div>
                <div class="pageview">
                    <span>View: 6422</span>&nbsp;<span>Like: 6422</span>
                </div>
            </div>
            <div class="item-image">
            <a href="/video/details/@item.ID"><img alt="video" src="http://img.youtube.com/vi/@item.getYoutubeID()/0.jpg" /></a> 
            <a style="position:absolute;top:150px;left:200px" href="/video/details/10"><img src="/images/play.png" alt="video"/></a>
               @*<iframe width="100%" height="350" src="http://www.youtube.com/embed/uM1b5R2mikw" frameborder="0" allowfullscreen></iframe>*@

            </div>
        </div>
        <div style="clear: both"></div>
    </div> 
}
</div>
