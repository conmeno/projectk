@model IEnumerable<projectk.Models.Article>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <style>
     table tr th
     {
         text-align:left;padding:0 10px;
     }
     table tr td
     {
       padding:0 10px;
     }
 </style>
<p>
    @Html.ActionLink("Thêm ảnh", "Create")
</p>
<p>
    Danh sách ảnh mà bạn đả đăng
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.PageView)
        </th>
           <th>
            @Html.DisplayNameFor(model => model.Like)
        </th> 
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
   
        <td>
            @Html.DisplayFor(modelItem => item.PageView)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Like)
        </td>
         
    </tr>
}

</table>
