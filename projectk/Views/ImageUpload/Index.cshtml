@model IEnumerable<projectk.Models.Article>

@{
    ViewBag.Title = "Ảnh của bạn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    table tr th
    {
        text-align: left;
        

        font: bold 11px "Trebuchet MS", Verdana, Arial, Helvetica,
	sans-serif;
	color: #6D929B;
	border: 1px solid #C1DAD7; 
	letter-spacing: 2px;
	text-transform: uppercase;
	text-align: left;
	padding: 6px 6px 6px 12px;
	 
    }

    table tr td
    {
       

        border: 1px solid #C1DAD7;
	 
	background: #fff;
	padding: 6px 6px 6px 12px;
	color: #6D929B;
    }
</style>
<p>
    @Html.ActionLink("Thêm ảnh", "Create") 
    ,
     @Html.ActionLink("Thêm Video", "Index","VideoUpload")
</p>
<p>
    Danh sách ảnh mà bạn đã đăng
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbnailData)
        </th>
           <th>
            @Html.DisplayNameFor(model => model.DatePost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageView)
        </th> 
        
         <th>
            @Html.DisplayNameFor(model => model.Cat)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Like)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Name) 
            </td>
            <td> 
            @if(item.ThumbnailData!=null)
            {
                <a href="/funny/details/@item.ID">
                    <img alt="@item.Name" src="data:image/jpg;base64,@Convert.ToBase64String(item.ThumbnailData)" />
                </a> 
                
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageView)
            </td>
            <td>
        
            @if (item.Cat == (int)projectk.Models.Cats.Funny)
            { 
                <span>Funny</span>
            }
            else if (item.Cat == (int)projectk.Models.Cats.HotGirl)
            {
                <span>Hotgirl</span>
            }else
            {
             <span>Video</span>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Like)
            </td>
            <td>
               @item.GetStatus()
            </td>

        </tr>
    }

</table>
