    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Scripts/js/jquery.lazyload.js"></script>
    <script src="~/Scripts/js/jquery.colorbox-min.js"></script>
    <script src="~/Scripts/js/js.js"></script>
    <script src="~/Scripts/js/holder.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $("img.lazy").lazyload({
                effect: "fadeIn", failure_limit: 10
            });
            $(".imagebox").colorbox({ rel: 'group3', transition: "none", width: "95%", height: "95%" });

            $(function () {
                $('#socialLoginList').find('button').addClass(" btn btn-primary ");
            });
        });

    </script>



    <script src="//connect.facebook.net/en_US/all.js#xfbml=1&appId=567852689902024"></script>

    <script type="text/javascript">
        FB.Event.subscribe('edge.create',
        function (response) {
            $.ajax({
                url: '/aj/updatelike?link=' + response, success: function (result) {
                    $("#container1").append(result);
                }
            });
            //alert('You liked the URL: ' + response);
        }
);
        FB.Event.subscribe('edge.remove',
      function (response) {
          $.ajax({
              url: '/aj/updateunlike?link=' + response, success: function (result) {
                  $("#container1").append(result);
              }
          });
          //alert('You liked the URL: ' + response);
      }
);
        $(document).keypress(function (e) {
            if (e.keyCode == 37) {
                alert('You pressed left arrow key!');
            }
            if (e.keyCode == 39) {
                alert('You pressed right arrow key!');
            }
        });

    </script>
</body>
